{
  "name": "momotwitter",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,md,html}": "prettier --write"
  },
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "dev": "concurrently \"npm:dev --workspace=frontend\" \"npm:dev --workspace=backend\"",
    "build": "npm run build --workspace=frontend",
    "format": "prettier --write . --cache",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "npm run format && npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hahanic/momoTwitter.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hahanic/momoTwitter/issues"
  },
  "homepage": "https://github.com/Hahanic/momoTwitter#readme",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.0",
    "cz-git": "^1.12.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
